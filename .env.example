# ==============================================================================
# WebStatus - Environment Configuration
# ==============================================================================
# Copy this file to .env and customize for your environment
# Note: Docker Compose users should set these in docker-compose.yml instead

# ==============================================================================
# Feature Flags
# ==============================================================================
# Control which features are enabled/disabled in your deployment

# Network Discovery Feature
# Enables subnet scanning and device discovery functionality
# Set to 'false' in cloud deployments where network scanning may be restricted
# Default: true (enabled for self-hosted deployments)
ENABLE_DISCOVERY=true

# ==============================================================================
# Application Settings
# ==============================================================================

# Logging Level
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# Timezone
# Used for timestamps in logs and UI
# Example: America/New_York, Europe/London, Asia/Tokyo
# Default: System timezone
TZ=America/New_York

# ==============================================================================
# Development Settings
# ==============================================================================

# Uvicorn Auto-reload
# Enable hot-reloading during development (DO NOT use in production)
# Default: false
UVICORN_RELOAD=false

# ==============================================================================
# Future Feature Flags
# ==============================================================================
